{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}


<div>
    <main>
        <h1>{{make}} {{model}}</h1>
        <h3> {{year}} --- {{color}} </h3>
        <hr>
        <h2>Features:</h2>
        {{#each features}}
        <div>
            <h3>{{@key}}:</h3>
            {{#each this}}
            {{@key}}
            <ul>
                {{#each this}}
                <li>
                    {{@key}}:{{#unless this.touchscreen}} {{this}}
                    {{else}}
                    <ul>
                        {{#each this}}
                        <li>
                            {{this}}

                        </li>
                        {{/each}}
                    </ul>
                    {{/unless}}
                </li>
                {{/each}}
            </ul>
            {{/each}}
        </div>
        {{/each}}

        <h2>Engine:</h2>
        {{#each engine}}
        <div>
            <p>{{@key}}: {{#unless this.gears}} {{this}}</p>
            {{else}}
            <ul>
                {{#each this}}
                <li>
                    {{@key}} - {{this}}

                </li>
                {{/each}}
            </ul>
            {{/unless}}
        </div>
        {{/each}}

        <h2>Fuel economy:</h2>
        {{#each fuel_economy}}
        <div>
            <p>{{@key}}: {{this}}</p>
        </div>
        {{/each}}

        <h2>Price:</h2>
        {{#each price}}
        <div>
            <p>{{@key}}: {{#unless this.navigation}} {{this}}</p>
            {{else}}
            <ul>
                {{#each this}}
                <li>
                    {{@key}} - {{this}}

                </li>
                {{/each}}
            </ul>
            {{/unless}}
        </div>
        {{/each}}



    </main>
</div>

