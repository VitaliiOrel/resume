{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

{{#each web}}

<h1>Web deweloping includes {{@key}}:</h1>

<hr>

{{#each this}}
<h2>{{name}}</h2>
<p>Current version: {{version}}</p>
<p>{{description}}</p>

{{#if elements}}
<h3>In {{name}} we use tegs:</h3>
{{/if}}
<ul>
    {{#each elements}}
    <li>
        <p>
            <code><</code>{{name}}<code>></code>
        </p>
        <p>{{description}}</p>
        {{#if attributes}}<em>Attributes:</em>{{/if}}
        {{#each attributes}}
        <p>{{name}}: {{description}}</p>
        {{/each}}
    </li>
    {{/each}}
</ul>


{{#if properties}}
<h3>In {{name}} we use properties:</h3>
{{/if}}
<ul>
    {{#each properties}}
    <li>
        <p> {{name}} </p>
        <p> {{description}} </p>
        {{#if values}}<em>Values:</em>{{/if}}
        {{#each values}}
        <p>{{value}}: {{description}}</p>
        {{/each}}
    </li>
    {{/each}}
</ul>

{{#if functions}}
<h3>In {{name}} we use functions:</h3>
{{/if}}
<ul>
    {{#each functions}}
    <li>
        <p> {{name}} </p>
        <p> {{description}} </p>
        {{#if parameters}}<em>Parameters:</em>{{/if}}
        {{#each parameters}}
        <p>{{name}} (type: {{type}}): {{description}}</p>
        {{/each}}
    </li>
    {{/each}}
</ul>

<hr>
{{/each}}
{{/each}}
