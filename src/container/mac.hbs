{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <main>

        <h1>{{name}}</h1>
        <h3>{{description}}</h3>
        <hr>
        <p>Price: {{price}}</p>
        <p>Category: {{category}}</p>
        <hr>
        <h3>Features:</h3>
        {{#with features}}
        <h5>Processor:</h5>
        <ul>
            {{#each processor}}
            <li>{{@key}}: {{this}}</li>
            {{/each}}
        </ul>
        <h5>Memory:</h5>
        <ul>
            {{#each memory}}
            <li>{{@key}}: {{this}}</li>
            {{/each}}
        </ul>
        <h5>Memory:</h5>
        <ul>
            {{#each memory}}
            <li>{{@key}}: {{this}}</li>
            {{/each}}
        </ul>
        <h5>Storage:</h5>
        <ul>
            {{#each storage}}
            <li>{{@key}}: {{this}}</li>
            {{/each}}
        </ul>
        <h5>Display:</h5>
        <ul>
            {{#each display}}
            <li>{{@key}}: {{this}}</li>
            {{/each}}
        </ul>
        <h5>Graphics options:</h5>
        <ul>
            {{#each graphics}}
            <li>{{@key}}: {{this}}</li>
            {{/each}}
        </ul>
        <h5>Ports:</h5>
        {{#each ports}}
        <ul>
            {{#each this}}
            <li>{{@key}}: {{this}}</li>
            {{/each}}
        </ul>
        {{/each}}
        <h5>Battery:</h5>
        <ul>
            {{#each battery}}
            <li>{{@key}}: {{this}}</li>
            {{/each}}
        </ul>
        <h5>Weight:</h5>
        <p>{{weight}}</p>
        <h5>Dimensions:</h5>
        <ul>
            {{#each dimensions}}
            <li>{{@key}}: {{this}}</li>
            {{/each}}
        </ul>
        <h5>Operating system:</h5>
        <p>{{operating_system}}</p>
        <h5>Accessories:</h5>
        {{#each accessories}}
        <ul>
            {{#each this}}
            <li>{{@key}}: {{this}}</li>
            {{/each}}
        </ul>
        {{/each}}


        {{/with}}
    </main>
</div>

