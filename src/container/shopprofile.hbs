        {{/each}}

        {{/with}}

        {{!-- ====================== subscribe ==================== --}}

        {{#with subscribe}}

        <div class="card text-bg-dark">
            <div class="card-header">
                <h2>{{header}}</h2>
            </div>
            <div class="card-body">
                <p>{{description}}</p>
                {{#each buttons}}
                <a href="{{this.link}}" class="btn btn-primary btn-sm  my-1" target="_blank">{{this.text}}</a><br>
                {{/each}}
            </div>

        </div>

        {{/with}}

        <div class="my-5">
            <hr>
        </div>




        {{!-- =================== f o o t e r ==================== --}}
        <footer class="row">

            {{#each footer}}

            <div class="col-2 ms-0 ps-0 me-3">
                <div class="nav flex-column">

                    <div class="nav-item">
                        <a class="nav-link active" href="{{this.[0].link}}">
                            <nobr>{{this.[0].text}}</nobr>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link active" href="{{this.[1].link}}">
                            <nobr>{{this.[1].text}}</nobr>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link active" href="{{this.[2].link}}">
                            <nobr>{{this.[2].text}}</nobr>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link disabled" href="{{this.[3].link}}">
                            <nobr>{{this.[3].text}}</nobr>
                        </a>
                    </div>

                </div>
            </div>

            {{/each}}

        </footer>

    </div>

</main>