<main>
    <div class="row me-5">

        {{!-- ========= Navigation ============= --}}

        {{#with navigation}}
        <div class="card col-12 px-0">
            <div class="nav">

                {{#each links}}
                <div class="nav-item">
                    <a href="{{this.href}}" class="nav-link {{#unless this.href}}disabled{{/unless}}">{{this.text}}
                    </a>
                </div>
                {{/each}}

                <a href="#" class="nav-link {{#unless this.href}}disabled{{/unless}}">Disabled
                </a>



            </div>
        </div>
        {{/with}}

        {{!-- ================Мої замовлення title ===================== --}}


        <div class="mt-4 mb-1">
            <h1>{{header}}</h1>
        </div>

        {{#with purchase}}

        <div class="nav nav-tabs mb-4">

            {{#with tabs}}

            <div class="nav-item">
                <a href="#" class="nav-link active">
                    {{[0]}}
                </a>
            </div>

            <div class="nav-item">
                <a href="#" class="nav-link">
                    {{[1]}}
                </a>
            </div>

            {{/with}}

        </div>

        {{#with actionBlock}}

        <div class="col-4 me-0 pe-0">
            <input class="form-control my-0 form-control-sm" placeholder="{{input.placeholder}}">
        </div>


        <div class="col-8 ps-0">
            {{#each buttons}}
            <a href="{{link}}" class="btn
            {{#if this.isSuccess}}btn-success
            {{else if this.isOutline}}btn-outline-success
            {{else if this.isDanger}}btn-outline-danger
            {{else}}btn-secondary{{/if}}
            btn-sm ms-2">{{text}}</a>
            {{/each}}
        </div>


        {{/with}}



        <div class="col-12 py-4">
            <hr>
        </div>

        {{!-- ======================= item list ====================== --}}



        {{#each itemList}}

        {{>purchaseItem}}
