        {{!-- ================== Особиста інформація ======================== --}}

        {{#with userInfo}}

        <div class="ms-0 ps-0 mb-4">
            <h3>{{title}}</h3>
        </div>

        {{#with profileData}}

        <div class="card">


            <div>
                <h4>{{title}}</h4>
            </div>

            {{#with fullName}}
            <div class="card my-3">
                <div class="card-body row">

                    {{#with surname}}
                    <div class="col-4">
                        <p>{{title}}</p>
                        <strong>{{value}}</strong>
                    </div>
                    {{/with}}

                    {{#with name}}
                    <div class="col-4">
                        <p>{{title}}</p>
                        <strong>{{value}}</strong>
                    </div>
                    {{/with}}

                    {{#with middleName}}
                    <div class="col-4">
                        <p>{{title}}</p>
                        <strong>{{value}}</strong>
                    </div>
                    {{/with}}

                </div>
            </div>
            {{/with}}


            {{#with otherInfo}}
            <div class="card my-3">
                <div class="card-body row">

                    {{#with birthday}}
                    <div class="col-4">
                        <p>{{title}}</p>
                        <strong>{{value}}</strong>
                    </div>
                    {{/with}}

                    {{#with sex}}
                    <div class="col-4">
                        <p>{{title}}</p>
                        <strong>{{value}}</strong>
                    </div>
                    {{/with}}

                    {{#with language}}
                    <div class="col-4">
                        <p>{{title}}</p>
                        <strong>{{value}}</strong>
                    </div>
                    {{/with}}

                </div>
            </div>
            {{/with}}

            {{/with}}

            <div class="card my-3">
                <div class="card-body row">

                    {{#each buttons}}

                    <div class="col-4 ps-0">

                        <a href="{{this.link}}" class="btn
                        {{#if this.isPrimary}}btn-primary
                        {{else if this.isSecondary}}btn-outline-secondary
                        {{else if this.isDanger}}btn-outline-danger
                        {{else}}btn-secondary{{/if}}
                        btn-sm ms-2">{{text}}</a>
                    </div>

                    {{/each}}

                </div>
            </div>



        </div>

        {{#with recipients}}

        <div class="card mt-3">

            <div>
                <h4>{{title}}</h4>
            </div>

            <div class="row gx-2 gy-2">
                {{#each users}}
                <section class="col-4">
                    <div class="card mb-2">
                        <div class="card-body">
                            <strong>{{name}}</strong>
                            <p>{{phone}}</p>
                            <a href="{{button.link}}" class="btn btn-primary btn-sm">{{button.text}}</a>
                        </div>
                    </div>
                </section>
                {{/each}}
            </div>

        </div>

        {{/with}}

        {{#with contacts}}

        <div class="card mt-3">

            <div>
                <h4>{{title}}</h4>
            </div>

            <div class="row gx-2 gy-2">
                {{#each contactData}}
                <section class="col-4">
                    <div class="card mb-2">
                        <div class="card-body">
                            <span>{{title}}</span>
                            <p><strong>{{value}}</strong></p>
                            <a href="{{button.link}}" class="btn
                            {{#if button.isPrimary}}btn-primary
                            {{else if button.isSecondary}}btn-outline-secondary
                            {{else if button.isDanger}}btn-outline-danger
                            {{else}}btn-secondary{{/if}}
                            btn-sm ms-2">{{button.text}}</a>
                        </div>
                    </div>
                </section>
                {{/each}}
            </div>

        </div>

        {{/with}}



        {{/with}}
