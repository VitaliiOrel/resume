<div class="row">
    <div class="col-4 pt-4">
        <p>{{this.number}}</p>
        <h5 class="mb-1">{{this.status}}</h5>
    </div>

    <div class="col-2 pt-4 mx-0 px-0">
        <p>{{amount.title}}</p>
        <p>{{amount.value}}</p>
    </div>

    <div class="col-4 ms-2 my-2 ps-0 pe-0 me-0">
        {{#each images}}
        <img src="{{this}}" width="90" height="90">
        {{/each}}

    </div>


    <div class="col-1 mx-0 px-0">
        {{#with button}}
        <button class="btn 
                    {{#if isPrimary}}btn-primary
                    {{else}}btn-secondary{{/if}}
                    btn-sm mt-4">{{text}}</button>
        {{/with}}
    </div>
    <div>
        <hr>
    </div>
</div>